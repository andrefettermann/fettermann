<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Fettermann Aikidô - <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" 
  rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" 
  crossorigin="anonymous">
  <link rel="stylesheet" href="../../css/consulta-menu.css">
  <link rel="icon" href="../../images/logo-sm.png" type="image/png">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <div class="container pt-3 w-100">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
          <a href="/pessoas" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none"> 
              <img src="../../images/logo-sm.png"/>
              <span class="fs-4">Fettermann Aikidô</span>
          </a> 

          <%- include('partials/menu_principal') %>
      </header>
  </div>
  <main>
    <div class="container pt-3 w-100">
    
      <div class="card">
        <div class="card-header"><%= title %></div>
        <div class="card-body">
          <form id="formulario" name="formulario" action="<%= action %>" 
            method="POST">
            <input type="hidden" id="total_tecnicas" name="total_tecnicas" value="<%= total_tecnicas %>">

            <!-- Info Alert -->
            <div class="alert alert-info alert-dismissible fade show">
              <strong>Info!</strong> O '*'' indica os campos obrigatórios.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <div id="mensagem-topo" class="alert alert-danger alert-dismissible d-none" >
              <span id="texto-mensagem"></span>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <!--Ordem -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="sequencia" class="col-form-label">*Sequência</label>
              </div>
              <div class="col-1">
                <input type="text" class="form-control" id="sequencia" name="sequencia" value="<%= doc.sequencia %>"
                placeholder="A ordem sequencial da graduação" title="A ordem sequencial da graduação" 
                data-obrigatorio="Por favor, preencha a ordem sequencial da graduação.">
              </div>
            </div>

            <!-- Nome -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="nome" class="col-form-label">*Nome</label>
              </div>
              <div class="col-2">
                <input type="text" class="form-control" id="nome" name="nome" value="<%= doc.nome %>"
                placeholder="O nome da graduação" title="O nome da graduação" data-obrigatorio="Por favor, preencha o nome da graduação.">
              </div>
            </div>

            <!-- Faixa -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="faixa" class="col-form-label">Faixa</label>
              </div>
              <div class="col-2">
                <input type="text" class="form-control" id="faixa" name="faixa" value="<%= doc.faixa %>"
                placeholder="A cor da faixa" aria-colcount="10" data-toggle="tooltip" data-placement="top" 
                title="A cor da faixa">
              </div>
            </div>

            <!-- Horas para exame -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="horas_exame" class="col-form-label">Horas para exame</label>
              </div>
              <div class="col-2">
                <input type="text" class="form-control" id="horas_exame" name="horas_exame" 
                value="<%= doc.minimo_horas_treino_exame %>"
                placeholder="O número mínimo de horas de treino na faixa anterior para prestar exame" 
                aria-colcount="10" data-toggle="tooltip" data-placement="top" 
                title="O número mínimo de horas de treino na faixa anterior para prestar exame">
              </div>
            </div>

            <!-- Meses para exame -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="meses_exame" class="col-form-label">Meses para exame</label>
              </div>
              <div class="col-2">
                <input type="text" class="form-control" id="meses_exame" name="meses_exame" 
                value="<%= doc.minimo_tempo_exame %>"
                placeholder="O número mínimo de meses na faixa anterior para prestar exame" 
                aria-colcount="10" data-toggle="tooltip" data-placement="top" 
                title="O número mínimo de meses na faixa anterior para prestar exame">
              </div>
            </div>

            <!-- Categoria -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="categoria" class="form-label">Categoria</label>
              </div>
              <div class="col-2">
                <select id="categoria" name="categoria" class="form-select" aria-label="Categoria">
                  <option value="" selected>Selecione</option>
                  <% if (doc.categoria=="Infantil" ) { %>
                    <option selected value="Infantil">Infantil</option>
                    <option value="Adulto">Adulto</option>
                    <% } else if (doc.categoria=="Adulto" ) { %>
                      <option value="Infantil">Infantil</option>
                      <option selected value="Adulto">Adulto</option>
                      <% } else { %>
                      <option value="Infantil">Infantil</option>
                      <option value="Adulto">Adulto</option>
                      <% } %>
                </select>
              </div>
            </div>

            <!-- Observacoes -->
            <div class="form-group row mb-3">
              <div class="col-2">
                <label for="obervacoes" class="col-form-label">Observações</label>
              </div>
              <div class="col">
                <input type="text" class="form-control" id="observacoes" name="observacoes" 
                value="<%= doc.observacoes %>"
                placeholder="Comentários diversos" 
                aria-colcount="10" data-toggle="tooltip" data-placement="top" 
                title="Comentários diversos">
              </div>
            </div>

            <div class="card w-75 mx-auto mb-5">
              <div class="card-header fw-bold">Técnicas</div>
              <div class="card-body" id="tecnicas">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
                  <button id="adiciona_tecnica" class="btn btn-primary" 
                  type="button">Adiciona técnica</button>
                </div>
                  <% if (doc.tecnicas) { %>
                    <% for (const [index, tecnica] of doc.tecnicas.entries()) {  %>
                      <div class="form-group row mb-3" id="tecnica" name="tecnica">
                        <div class="col-1">
                          <label for="nome_<%= index+1 %>" class="col-form-label">Nome</label>
                        </div>
                        <div class="col-9">
                          <input id="nome_<%= index+1 %>" name="nome_<%= index+1 %>" 
                          type="text" class="form-control" value="<%= tecnica.nome %>"/>
                        </div>
                      </div>
                    <% }; %>
                  <% }; %>
              </div>

            </div>

            <div class="col-12">
              <input id="botao_grava" name="botao_grava" class="btn btn-primary" type="submit" value="Grava" />
              <a id="botao_cancela" name="botao_cancela" class="btn btn-primary" href="/graduacoes">Cancela</a>
            </div>

          </form>
        </div>
      </div>
    </div>
  </main>

  <div class="container"> 
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"> 
          <div class="col-md-4 d-flex align-items-center"> 
              <span class="mb-3 mb-md-0 text-body-secondary">v. 2025.04 - Graduações - Fettermann Aikidô</span>
            </div> 
            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex"></ul> 
      </footer> 
  </div>

  <script src="/js/verifica_campos_obrigatorios.js"></script>
  <script src="/js/adiciona_tecnica.js"></script>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" 
  integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" 
  crossorigin="anonymous"></script>
</body>

</html>