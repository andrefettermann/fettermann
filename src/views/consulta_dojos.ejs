    <link rel="icon" href="../images/logo-sm.png" type="image/png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div class="container pt-3 w-100">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/pessoas" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none"> 
                <img src="../images/logo-sm.png"/>
                <span class="fs-4">Fettermann Aikidô</span>
            </a> 
            <%- include('partials/consulta_menu') %>
        </header>
    </div>

    <main>

        <div class="container pt-3 w-100">
            <div class="card">
                <div class="card-header fw-bold">
                    <span id="total" name="total"><%= total + " dojo(s) encontrado(s)"%></span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">

                        <% var ufAnterior = ""; %>
                        <% docs.forEach(function(doc) { %>
                            <% if (ufAnterior != doc.uf) { %>
                            <%  if (ufAnterior != "") { %>
                                    </div>
                                </div>
                            <%  } %>
                                <div class="card mb-2">
                                    <div class="card-header fw-bold">
                                        <span id="total" name="total"><%= doc.uf %></span>
                                    </div>
                                    <div class="card-body">
                            <%  ufAnterior = doc.uf; %>
                            <% } %>
                                <div class="card mb-2">
                                    <div class="card-header fw-bold"><%= doc.nome %></div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <h5><%= doc.local %></h5>
                                                <p>
                                                    <%= doc.endereco %> <br/>
                                                    <%= doc.bairro %>  - <%= doc.cidade %>
                                                </p>
                                                <p>
                                                    <% if (doc.professor[0]) { %>
                                                        <%=  doc.professor[0].nome  %> <br/>
                                                    <% } %>
                                                    <%= doc.horarios %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        <% }); %>


